<%- include('header') -%>
    <div class="container">
        <h3>Edit rig</h3>
        <div class="row">
            <div class="col-12 col-sm-7 col-md-7">
                <form>
                    <div class=" input-group mb-3">
                        <input id="setName" type="text" class="form-control" placeholder="Name.."
                            value="Ultimate RIG 2021">
                        <input type="submit" class="btn btn-dark ml-2" value="Done">
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-7 col-md-7">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th scope="col">Part type</th>
                            <th scope="col">Part name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Num of pieces</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>CPU</th>
                            <td>Intel Celeron 123</td>
                            <td>120 $</td>
                            <td>1</td>
                            <td>
                                <a class="btn btn-success" href="/admin/edit/:rigid/:partid"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                        <tr>
                            <th>GPU</th>
                            <td>nVidia RTX GPU</td>
                            <td>1500 $</td>
                            <td>4</td>
                            <td>
                                <a class="btn btn-success" href="/admin/edit/:rigid/:partid"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                        <tr>
                            <th>RAM</th>
                            <td>4 GB DDR4 Ram</td>
                            <td>30 $</td>
                            <td>1</td>
                            <td>
                                <a class="btn btn-success" href="/admin/edit/:rigid/:partid"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                        <tr>
                            <th>SSD</th>
                            <td>SSD 120 GB</td>
                            <td>35 $</td>
                            <td>1</td>
                            <td>
                                <a class="btn btn-success" href="/admin/edit/:rigid/:partid"><i class="fas fa-edit"></i></a>
                            </td>

                        <tr>
                            <th>PSU</th>
                            <td>1600 W Platinum</td>
                            <td>1665 $</td>
                            <td>1</td>
                            <td>
                                <a class="btn btn-success" href="/admin/edit/:rigid/:partid"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    </tbody>
                    <thead>
                        <tr>
                            <th scope="col">Sum</th>
                            <th scope="col"></th>
                            <th scope="col">7850 $</th>
                            <th scope="col">8</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
                <div class="row">
                    <div class="col">
                        <form>
                            <div class="input-group mb-3">
                                <label class="m-1" for="partName">Part type</label>
                                <input id="parttype" type="text" class="form-control" value="CPU" disabled>
                            </div>
                            <div class="input-group mb-3">
                                <label class="m-1" for="partName">Part name</label>
                                <input id="partName" type="text" class="form-control" value="Intel Celeron 123">
                            </div>
                            <div class="input-group mb-3">
                                <label class="m-1" for="partPrice">Part price (USD)</label>
                                <input id="partPrice" type="text" class="form-control" value="120 USD">
                            </div>
                            <div class="input-group mb-3">
                                <label class="m-1" for="partPrice">Hashrate</label>
                                <input id="partHashrate" type="text" class="form-control">
                            </div>
                            <div class="input-group mb-3">
                                <label class="m-1" for="partPrice">Pieces</label>
                                <input id="partPieces" type="text" class="form-control" value="1">
                            </div>
                            <input type="submit" class="btn btn-dark" value="Edit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/7cd2bf1b08.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
